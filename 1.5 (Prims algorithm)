#include <stdio.h>
#include <limits.h>

#define MAX 100

void primsAlgorithm(int n, int graph[MAX][MAX]) {
    int selected[MAX]; 
    int edgeCount = 0;
    int i, j;

    for (i = 0; i < n; i++) {
        selected[i] = 0;
    }

    selected[0] = 1;

    printf("Edges in the Minimum Spanning Tree:\n");

    while (edgeCount < n - 1) {
        int min = INT_MAX;
        int u = -1, v = -1;

        for (i = 0; i < n; i++) {
            if (selected[i]) {
                for (j = 0; j < n; j++) {
                    if (!selected[j] && graph[i][j]) {
                        if (min > graph[i][j]) {
                            min = graph[i][j];
                            u = i;
                            v = j;
                        }
                    }
                }
            }
        }

        if (u != -1 && v != -1) {
            printf("%d - %d  :  %d\n", u, v, graph[u][v]);
            selected[v] = 1;
            edgeCount++;
        }
    }
}

int main() {
    int n;
    int graph[MAX][MAX];
    int i, j;

    scanf("%d", &n);

    for (i = 0; i < n; i++) {
        for (j = 0; j < n; j++) {
            scanf("%d", &graph[i][j]);
        }
    }

    primsAlgorithm(n, graph);

    return 0;
}
